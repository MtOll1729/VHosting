
@{
    ViewData["Title"] = "Search";
}

@model List<object>

<h1>Search</h1>

<h2>Users</h2>
@foreach(var obj in Model) 
{
    <div class="row">
        @if (obj is User)
        {
            <div class="col-sm-4"><bold>@((obj as User)?.Nickname)</bold></div>
        }
    </div>
}

<h2>Videos</h2>
@foreach(var obj in Model) 
{
    <div class="row">
        @if (obj is Video)
        {
            <div class="col-sm-4">
                <div class="h4">@((obj as Video)?.Name)</div>
                <button class="btn btn-primary" onclick="location.href='@Url.Action("Details", "Videos", new { Id = (obj as Video)?.Id })'">See now</button>
            </div>
        }
    </div>
}

<style>
    .col-sm-4 {
        background: #fadab4;
        border: 2px solid black;
    }

    .col-sm-4:hover {
        transform: scale(1.1);
    }
</style>